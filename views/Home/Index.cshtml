@model IEnumerable<WebApplication.Models.Employee>

@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers

@{
	Layout = "~/views/shared/_Layout.cshtml";
	ViewBag.Title = "Employee List";

}
<div class="row justify-content-center m-3">


		
				@foreach (var employee in Model)
			{
			var photoPath = "~/images/" + (employee.PhotoPath ?? "imagePro.jpg");
				<div class="card m-3" style="width:22rem;">
				<div class="card-header">
					

						   <h3>@employee.Name</h3>

			           </div>

					
					   <div class="card-body text-center">
				          <img class="card-img-top" src="@photoPath" asp-append-version="true" />
					   </div>
					   
					   <div class="card-footer text-center">
						   <a asp-controller="home" asp-action="details" asp-route-id="@employee.Id"
				                class="btn btn-primary" >View</a>
						   
				           <a asp-action="edit" asp-controller="home" asp-route-id="@employee.Id"
						   class="btn btn-primary">Edit</a>
				           <a href="#" class="btn btn-danger">Delete</a>
						</div>
				
		        </div>




			}
		    

</div>
